<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="th.co.creativeme.basiccal.MainActivity">

<LinearLayout
    android:id="@+id/inputField"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="#200000ff"
    >

    <EditText
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/actionCal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        />

    <EditText
        android:id="@+id/input2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/allBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/inputField"
        android:background="#300000ff">

        <ImageView
            android:id="@+id/plusBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/plus_icon"
            />
        <ImageView
            android:id="@+id/minusBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/minus_icon"
            />
        <ImageView
            android:id="@+id/multiplyBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/multiply_icon"
            />
        <ImageView
            android:id="@+id/divideBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/divide_icon"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#10ff0000"
        android:layout_below="@id/allBtn"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/equalBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/equal_icon"
            android:background="#90ff0000"
            />
        <EditText
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</RelativeLayout>
