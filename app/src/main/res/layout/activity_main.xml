<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#200000ff"
    tools:context="th.co.creativeme.basiccal.MainActivity">

<LinearLayout
    android:id="@+id/inputField"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="#200000ff"
    >

    <EditText
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/actionCal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#00ffffff"
        android:gravity="center_horizontal"
        android:textSize="9pt"
        />

    <EditText
        android:id="@+id/input2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/allBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/inputField"
        android:background="#10ff0000"
>

        <Button
            android:id="@+id/plusBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="+"
            android:textSize="13pt"
            android:background="#90ff0000"

            />
        <Button
            android:id="@+id/minusBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="-"
            android:textSize="13pt"
            android:background="#90ff0000"
            />
        <Button
            android:id="@+id/multiplyBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="*"
            android:textSize="13pt"
            android:background="#90ff0000"

            />
        <Button
            android:id="@+id/divideBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="/"
            android:textSize="13pt"
            android:background="#90ff0000"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerField"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#100000ff"
        android:layout_below="@id/allBtn"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/equalBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:text="="
            android:textSize="17pt"
            android:background="#300000ff"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"

            />
        <Button
            android:id="@+id/clearBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:text="C"
            android:textSize="17pt"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#90ff0000"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

</RelativeLayout>
